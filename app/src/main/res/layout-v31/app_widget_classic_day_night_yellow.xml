<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_widget_classic_height"
    android:background="@drawable/app_widget_background"
    android:backgroundTint="?attr/colorSurface"
    android:orientation="horizontal"
    android:theme="@style/Theme.Material3.DynamicColors.DayNight"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/image"
        android:layout_width="115dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:background="@drawable/app_widget_background"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic[6]" />

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/media_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:layout_marginEnd="8dp">

            <ImageButton
                android:id="@+id/button_prev"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/widget_selector"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_skip_previous"
                tools:tint="@color/ate_secondary_text_dark" />

            <ImageButton
                android:id="@+id/button_toggle_play_pause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/widget_selector"
                android:scaleType="fitCenter"

                tools:src="@drawable/ic_play_arrow"
                tools:tint="@color/ate_secondary_text_dark" />

            <ImageButton
                android:id="@+id/button_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/widget_selector"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_skip_next"
                tools:tint="@color/ate_secondary_text_dark" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_height="wrap_content"
            android:layout_above="@id/media_actions"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:progressTint="@color/md_yellow_A400"/>

        <ImageButton
            android:id="@+id/button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:background="@drawable/widget_selector"
            android:scaleType="fitCenter"
            tools:src="@drawable/ic_refresh"
            tools:tint="@color/ate_secondary_text_dark" />

        <LinearLayout
            android:id="@+id/media_titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progress_bar"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/button_update"
            android:orientation="vertical"
            android:paddingStart="0dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAppearance="@style/TextViewSubtitle3"
                android:textColor="?android:attr/textColorPrimary"
                android:textAlignment="center"
                tools:text="Title" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:singleLine="true"
                android:textAppearance="@style/TextViewNormal3"
                android:textColor="?android:attr/textColorPrimary"
                android:textAlignment="center"
                tools:text="Text" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>