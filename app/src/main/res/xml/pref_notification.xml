<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.ttop.app.appthemehelper.common.prefs.supportv7.ATEPreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="@string/pref_header_notification"
        app:allowDividerBelow="false">
    <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESwitchPreference
        android:defaultValue="false"
        android:key="classic_notification"
        android:layout="@layout/list_item_view_switch"
        android:summary="@string/pref_summary_classic_notification"
        android:title="@string/pref_title_classic_notification"
        app:icon="@drawable/ic_cellphone_lock"
        app:isPreferenceVisible="@bool/classic_notification"
        app:allowDividerBelow="false"/>

    <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESwitchPreference
        android:defaultValue="true"
        android:key="colored_notification"
        android:layout="@layout/list_item_view_switch"
        android:summary="@string/pref_summary_colored_notification"
        android:title="@string/pref_title_colored_notification"
        android:dependency="classic_notification"
        app:isPreferenceVisible="@bool/classic_notification"
        app:allowDividerBelow="false"/>

    <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESwitchPreference
        android:defaultValue="false"
        android:key="show_update"
        android:layout="@layout/list_item_view_switch"
        android:summary="@string/pref_summary_show_update"
        android:title="@string/pref_title_show_update"
        app:isPreferenceVisible="@bool/classic_notification"
        app:allowDividerBelow="false"/>

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATEListPreference
            android:defaultValue="repeat"
            android:entries="@array/pref_notification_action_1_list_titles"
            android:entryValues="@array/pref_notification_action_1_list_values"
            android:key="notification_action_1"
            android:layout="@layout/list_item_view"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            app:isPreferenceVisible="@bool/actions"
            android:title="@string/pref_title_notification_action_1"
            app:allowDividerBelow="false"/>

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATEListPreference
            android:defaultValue="shuffle"
            android:entries="@array/pref_notification_action_2_list_titles"
            android:entryValues="@array/pref_notification_action_2_list_values"
            android:key="notification_action_2"
            android:layout="@layout/list_item_view"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            app:isPreferenceVisible="@bool/actions"
            android:title="@string/pref_title_notification_action_2"
            app:allowDividerBelow="false"/>
    </com.ttop.app.appthemehelper.common.prefs.supportv7.ATEPreferenceCategory>
    <com.ttop.app.appthemehelper.common.prefs.supportv7.ATEPreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="@string/pref_header_widgets"
        app:allowDividerBelow="false">

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESwitchPreference
            android:defaultValue="false"
            android:key="widget_colors"
            android:layout="@layout/list_item_view_switch"
            android:summary="@string/pref_summary_widget_day_night"
            android:title="@string/pref_title_widget_day_night"
            android:icon="@drawable/ic_widget"
            android:disableDependentsState="true"
            app:isPreferenceVisible="@bool/widget_prefs"
            app:allowDividerBelow="false"/>

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESwitchPreference
            android:defaultValue="false"
            android:key="widget_transparency"
            android:layout="@layout/list_item_view_switch"
            android:summary="@string/pref_summary_widget_transparent"
            android:title="@string/pref_title_widget_transparent"
            android:dependency="widget_colors"
            app:allowDividerBelow="false"/>

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATEListPreference
            android:key="widget_button_color"
            android:defaultValue="default_color"
            android:layout="@layout/list_item_view"
            android:entries="@array/pref_widget_button_color_list_titles"
            android:entryValues="@array/pref_widget_button_color_list_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_widget_buttons_color"
            app:allowDividerBelow="false"/>

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATEColorPreference
            android:key="widget_custom_color"
            android:layout="@layout/list_item_color_view"
            android:persistent="false"
            android:summary="@string/pref_summary_widget_custom_color"
            android:title="@string/pref_title_widget_custom_color"
            app:icon="@drawable/ic_buttons_color"
            app:allowDividerBelow="false"/>

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESwitchPreference
            android:defaultValue="true"
            android:key="show_widget_progressbar"
            android:layout="@layout/list_item_view_switch"
            android:summary="@string/pref_summary_replace_progressbar"
            android:title="@string/pref_title_replace_progressbar"
            app:allowDividerBelow="false"/>

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATEListPreference
            android:defaultValue="teal"
            android:entries="@array/pref_progressbar_list_titles"
            android:entryValues="@array/pref_progressbar_list_values"
            android:key="progressbar_color"
            android:layout="@layout/list_item_view"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/progressbar_color"
            android:summary="@string/pref_summary_progress_bar_color"
            android:dependency="show_widget_progressbar"
            app:allowDividerBelow="false"/>
    </com.ttop.app.appthemehelper.common.prefs.supportv7.ATEPreferenceCategory>
    <com.ttop.app.appthemehelper.common.prefs.supportv7.ATEPreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="@string/pref_header_widgets_classic"
        app:allowDividerBelow="false">

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESwitchPreference
            android:defaultValue="false"
            android:key="classic_shape"
            android:layout="@layout/list_item_view_switch"
            android:summary="@string/pref_summary_widget_classic_shape"
            android:title="@string/pref_title_widget_classic_shape"
            android:disableDependentsState="true"
            app:allowDividerBelow="false"/>

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESeekBarPreference
            android:defaultValue="10"
            android:key="widget_image"
            android:layout="@layout/list_item_view_seekbar"
            android:max="20"
            android:summary="@string/pref_summary_widget_image_curve"
            android:title="@string/pref_title_widget_image_curve"
            app:showSeekBarValue="true"
            app:dependency="classic_shape"
            app:allowDividerBelow="false"/>

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESwitchPreference
            android:defaultValue="false"
            android:key="classic_blur"
            android:layout="@layout/list_item_view_switch"
            android:summary="@string/pref_summary_widget_classic_blur"
            android:title="@string/blur_widget"
            app:allowDividerBelow="false"/>
    </com.ttop.app.appthemehelper.common.prefs.supportv7.ATEPreferenceCategory>
    <com.ttop.app.appthemehelper.common.prefs.supportv7.ATEPreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="@string/pref_header_widgets_full"
        app:allowDividerBelow="false">

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESwitchPreference
            android:defaultValue="false"
            android:key="full_shape"
            android:layout="@layout/list_item_view_switch"
            android:summary="@string/pref_summary_widget_full_shape"
            android:title="@string/pref_title_widget_full_shape"
            android:disableDependentsState="true"
            app:allowDividerBelow="false"/>

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESeekBarPreference
            android:defaultValue="50"
            android:key="widget_image_full"
            android:layout="@layout/list_item_view_seekbar"
            android:max="70"
            android:summary="@string/pref_summary_widget_image_full_curve"
            android:title="@string/pref_title_widget_image_full_curve"
            app:showSeekBarValue="true"
            app:dependency="full_shape"
            app:allowDividerBelow="false"/>

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESwitchPreference
            android:defaultValue="false"
            android:key="full_blur"
            android:layout="@layout/list_item_view_switch"
            android:summary="@string/pref_summary_widget_full_blur"
            android:title="@string/blur_widget"
            app:allowDividerBelow="false"/>

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATEListPreference
            android:key="text_alignment"
            android:defaultValue="left"
            android:layout="@layout/list_item_view"
            android:entries="@array/pref_full_widget_text_alignment_list_titles"
            android:entryValues="@array/pref_full_widget_text_alignment_list_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_full_widget_text_alignment"
            app:allowDividerBelow="false"/>
    </com.ttop.app.appthemehelper.common.prefs.supportv7.ATEPreferenceCategory>
    <com.ttop.app.appthemehelper.common.prefs.supportv7.ATEPreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="@string/pref_header_widgets_queue"
        app:allowDividerBelow="false">

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESwitchPreference
            android:defaultValue="false"
            android:key="queue_shape"
            android:layout="@layout/list_item_view_switch"
            android:summary="@string/pref_summary_widget_queue_shape"
            android:title="@string/pref_title_widget_queue_shape"
            android:disableDependentsState="true"
            app:allowDividerBelow="false"/>

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESeekBarPreference
            android:defaultValue="10"
            android:key="widget_queue_image"
            android:layout="@layout/list_item_view_seekbar"
            android:max="20"
            android:summary="@string/pref_summary_widget_image_queue_curve"
            android:title="@string/pref_title_widget_image_queue_curve"
            app:showSeekBarValue="true"
            app:dependency="queue_shape"
            app:allowDividerBelow="false"/>

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESwitchPreference
            android:defaultValue="false"
            android:key="queue_blur"
            android:layout="@layout/list_item_view_switch"
            android:summary="@string/pref_summary_widget_queue_blur"
            android:title="@string/blur_widget"
            app:allowDividerBelow="false"/>

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESwitchPreference
            android:defaultValue="false"
            android:key="queue_reverse"
            android:layout="@layout/list_item_view_switch"
            android:summary="@string/pref_summary_queue_reverse"
            android:title="@string/pref_title_queue_reverse"
            app:allowDividerBelow="false"/>
    </com.ttop.app.appthemehelper.common.prefs.supportv7.ATEPreferenceCategory>
</androidx.preference.PreferenceScreen>