        android:layout="@layout/list_item_view_seekbar"
        android:max="100"
        android:summary="Change the widgets background transparency"
        android:title="Widget transparency"
        app:icon="@drawable/ic_widget"
        app:showSeekBarValue="true" />-->

        <com.ttop.app.appthemehelper.common.prefs.supportv7.ATESwitchPreference
            android:defaultValue="false"
            android:key="widget_colors"
            android:layout="@layout/list_item_view_switch"
            android:summary="@string/pref_summary_widget_day_night"
            android:title="@string/pref_title_widget_day_night"
            android:icon="@drawable/ic_widget"/>
    </com.ttop.app.appthemehelper.common.prefs.supportv7.ATEPreferenceCategory>
</androidx.preference.PreferenceScreen>