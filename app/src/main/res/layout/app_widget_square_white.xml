<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:theme="@style/Theme.Material3.DynamicColors.DayNight">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/default_audio_art"
        tools:src="@tools:sample/backgrounds/scenic[0]" />

    <ImageView
        android:id="@+id/button_toggle_play_pause"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/image"
        android:layout_centerInParent="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/circle_widget_background"
        android:backgroundTint="?attr/colorSurface"
        android:clickable="false"
        android:padding="18dp"
        android:scaleType="center"
        android:src="@drawable/ic_play_arrow_outline_small" />

    <ImageView
        android:id="@+id/button_prev"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignStart="@id/image"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/image"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="10dp"
        android:clickable="false"
        android:padding="18dp"
        android:scaleType="center"
        android:src="@drawable/ic_skip_previous_outline" />

    <ImageView
        android:id="@+id/button_next"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignEnd="@+id/image"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/image"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="10dp"
        android:clickable="false"
        android:padding="18dp"
        android:scaleType="center"
        android:src="@drawable/ic_skip_next_outline" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/image"
        android:layout_alignStart="@id/image"
        android:layout_alignBottom="@+id/image"
        android:layout_centerHorizontal="true"
        android:progressTint="@color/md_white_1000"
        android:padding="10dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="30dp"
        android:textAppearance="@style/TextViewSubtitle3"
        android:textColor="@color/md_grey_400"
        android:textAlignment="center"
        tools:text="Title" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="4dp"
        android:singleLine="true"
        android:textAppearance="@style/TextViewNormal3"
        android:textColor="@color/md_grey_400"
        android:layout_alignTop="@id/title"
        android:layout_marginTop="25dp"
        tools:text="Text" />
</RelativeLayout>